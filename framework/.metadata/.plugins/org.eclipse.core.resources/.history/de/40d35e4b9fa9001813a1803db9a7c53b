package hpe.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import java.sql.PreparedStatement;
import java.sql.ResultSet;

import hpe.po.User;

public class UserOptionImpl_jdbc implements IUserOption_jdbc {

	@Override
	public List<User> queryAll() throws Exception {

		// jdbc四大参数
		String driver = "com.mysql.jdc.Driver";
		String url = "jdbc:mysql://localhost:3306/mybatis";
		String username = "";
		String pwd = "";

		// 加载驱动
		Class.forName(driver);
		
		// 获取连接
		Connection connection = DriverManager.getConnection(url, username, pwd);
		
		// 创建statment执行对象
		String sql = "select * from user";
		PreparedStatement pStatment = connection.prepareStatement(sql);

		// 执行sql
		ResultSet resultSet = pStatment.executeQuery();
		// TODO:处理结果集
		List<User> ary = new ArrayList();
		
		while (resultSet.next()) {
			
			User user = new User();
			
			user.setId(resultSet.getInt(1));
			user.setAddress(resultSet.getString("address"));
			
			ary.add(user);
		}
		// 释放资源
		resultSet.close();
		pStatment.close();
		connection.close();
		
		return ary;
	}

}
