package com.hpe.java;

import org.junit.Test;

public class ReflectionTest {

	@Test
	public void test1(){
		
		//如何创建Person类的对象，并调用其中的对象
		
		Person p = new Person();
		p.setAge(10);
		p.setName("张三");
		
		System.out.println(p);
		
		p.eat();
		p.sayHi("李四");;
	}
	
	@Test
	public void test2() throws Exception{
		
		Class c1 = Person.class;
		
		//完成实例化，创建Person对象
		Object p = c1.newInstance();
		
		System.out.println(p);
	}
}
