package com.hp.service.impl;

import java.util.List;

import com.hp.dao.IAssetDao;
import com.hp.dao.impl.AssetDao;
import com.hp.po.Admin;
import com.hp.po.Asset;
import com.hp.po.User;
import com.hp.service.IAdminService;
import com.hp.service.IAssetServie;

/**
 * @Description:资产业务操作类 实现IAssetService
 * @author chaoling
 * @date 2018年8月1日
 */
public class AssetService implements IAssetServie {

	private IAssetDao assetDao = new AssetDao();
	
	@Override
	public List<Asset> selectAllAssetByUserName(User user) {

		List<Asset> res = assetDao.selectAllAssetByUserName(user.getUserId());
		
		if(res != null && res.size() != 0)
			return res;
		
		return null;
	}

	@Override
	public boolean selectCardNumByBankId(Asset asset) {
		
		int res = assetDao.selectCardNumByBankId(asset);
		
		if(res > 0)
			return true;
		return false;
	}

	@Override
	public boolean addAsset(Asset asset) {
		
		int res = assetDao.addAsset(asset);
		if(res > 0)
			return true;
		return false;
	}

	@Override
	public boolean updateAssetBefore(Asset asset) {
		
		int res = assetDao.selectCardNumByBankId(asset);
		if(res > 0)
			return true;
		return false;
	}

	@Override
	public boolean updateAsset(Asset asset) {

		int res = assetDao.updateAsset(asset);
		if(res > 0)
			return true;
		return false;
	}

	@Override
	public double selectSumAsset(User user) {
		
		return assetDao.selectSumAsset(user.getUserId());
	}

	
}
